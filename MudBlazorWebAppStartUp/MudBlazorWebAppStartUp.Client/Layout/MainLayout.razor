@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@IsDark" />
<MudPopoverProvider />T
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@IsDark"
                             Icon="@Icons.Material.Filled.BrightnessHigh" Color="@Color.Warning" title=@(IsDark ? "On" : "Off")
                             ToggledIcon="@Icons.Material.Filled.BrightnessLow" ToggledColor="@Color.Success" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool _drawerOpen = true;
        
    public bool IsDark { get; set; }
}

